---
interface Props {
    centerContent?: boolean
}

const { centerContent } = Astro.props;
---

<article class:list={[
    "bg-neutral-900 rounded-xl text-white px-6 md:px-8 py-3 ease-in duration-300 border-solid border-2 border-neutral-900 hover:border-solid hover:border-2 hover:border-neutral-600",
    {
        "flex flex-col justify-center items-center h-full w-full": centerContent
    }
]}>
    <slot></slot>
</article>