---
import Card from './Card.astro';
import Copy from './Copy.astro';
import NewTab from './NewTab.astro';
---

<section id='home' class='grid grid-cols-1 md:grid-cols-2 gap-2 px-2'>
  <Card>
    <img
      class='rounded-full w-28 md:w-32 mb-4'
      src='/photo.jpg'
      alt='Cristian J. López'
    />
    <h1 class='text-2xl lg:text-5xl font-bold mb-1'>Cristian J. López</h1>
    <p class='text-normal lg:text-2xl opacity-85'>
      <span class='font-bold'>Fullstack Web Developer</span> focused on creating
      incredible experiences and amazing solutions
    </p>
  </Card>
  <div class='flex flex-col gap-2'>
    <Card centerContent={true}>
      <h2 class='text-xl lg:text-4xl font-bold mb-4 text-center'>
        Have a project in mind?
      </h2>
      <div
        class='flex justify-center items-center gap-2 px-8 py-2 bg-sky-700 rounded-full'
      >
        <a href='mailto:lopezmorataya2002@gmail.com'>
          lopezmorataya2002@gmail.com
        </a>
        <Copy />
      </div>
      <div class='flex gap-2'>
        <Card centerContent={true}>
          <div class='flex justify-center items-center gap-2'>
            <a
              class='font-bold'
              target='_blank'
              href='https://github.com/CristianBlake'>GitHub</a
            >
            <NewTab />
          </div>
        </Card>
        <Card centerContent={true}>
          <div class='flex justify-center items-center gap-2'>
            <a
              class='font-bold'
              target='_blank'
              href='https://www.linkedin.com/in/blakecristian/'>LinkedIn</a
            >
            <NewTab />
          </div>
        </Card>
      </div>
    </Card>
  </div>
</section>
