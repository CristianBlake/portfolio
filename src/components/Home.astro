---
import Card from './Card.astro';
import Contact from './Contact.astro';

---

<section id='home' class='grid grid-cols-1 md:grid-cols-2 gap-2 px-2'>
  <Card>
    <img
      class='rounded-full w-28 md:w-32 mb-4'
      src='/photo.jpg'
      alt='Cristian J. López'
    />
    <h1 class='text-2xl lg:text-5xl font-bold mb-1'>Cristian J. López</h1>
    <p class='text-normal lg:text-2xl opacity-85'>
      <span class='font-bold'>Fullstack Web Developer</span> focused on creating
      incredible experiences and amazing solutions
    </p>
  </Card>
  <Contact />
</section>
